{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        //
        "lib": ["esnext", "dom"],
        "typeRoots": ["./src/types", "node_modules/@types"],
        // "strictNullChecks": true,
        "rootDir": "./",
        "inlineSources": true,
        "sourceRoot": "/",
        "baseUrl": "./",
        "paths": {
            "@views": [
                "views/index.ts"
            ],
            "@views/*": [
                "views/*/index.ts"
            ],
            "@node_modules/*": [
                "node_modules/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@infra/*": [
                "src/infra/*"
            ],
        },
        "plugins": [
        {
            "transform": "typescript-transform-paths"
        }
        ]
    },
    "exclude": [
        "node_modules",
        "static",
        "**/*.d.ts",
        "migrations",
        "knexfile.js",
        "dist",
    ]
}
