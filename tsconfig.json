{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        //
        "lib": ["esnext", "dom"],
        "typeRoots": ["./src/types", "node_modules/@types"],
        // "strictNullChecks": true,
        "rootDir": "./",
        "inlineSources": true,
        "sourceRoot": "/",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@config": [
                "src/config/index.ts"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@components/*": [
                "src/views/pages/components/*"
            ],
            "@infra/*": [
                "src/infra/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@node_modules/*": [
                "node_modules/*"
            ],
            "@schedulers/*": [
                "src/schedulers/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@views": [
                "src/views/index.ts"
            ],
            "@views/*": [
                "src/views/*"
            ]
        },
        "plugins": [
        {
            "transform": "typescript-transform-paths"
        }
        ]
    },
    "exclude": [
        "node_modules",
        "static",
        "**/*.d.ts",
        "migrations",
        "knexfile.js",
        "dist",
    ]
}
