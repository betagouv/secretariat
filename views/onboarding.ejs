                <% } else { %> 
                    <input name="referentList" list="user_names" id="referentList" required>
                    <datalist id="user_names">
                    <% users.forEach(function(user) { %>
                        <option data-value="<%= user.id %>" value="<%= user.fullname %>">
                    <% }) %>
                    </datalist>
