{
  "name": "secretariat",
  "version": "1.0.0",
  "description": "Le secrétariat de l’incubateur",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "migrate": "knex migrate:latest --esm",
    "makeMigration": "knex migrate:make --esm",
    "seed": "knex seed:run --esm",
    "rolldown": "knex migrate:down --esm",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint . --fix",
    "test": "ts-mocha --icu-data-dir=./node_modules/full-icu tests/*.ts tests/*.ts --exit --require ./tests/env-setup.ts --timeout 3000",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "build": "tsc -p tsconfig.build.json"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/secretariat.git"
  },
  "author": "Julien DAUPHANT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/betagouv/secretariat/issues"
  },
  "homepage": "https://github.com/betagouv/secretariat#readme",
  "engines": {
    "node": ">=8.3.0"
  },
  "dependencies": {
    "@octokit/core": "^3.6.0",
    "@octokit/request": "^5.6.3",
    "@octokit/rest": "^18.12.0",
    "@sentry/integrations": "^6.19.6",
    "@sentry/node": "^6.19.3",
    "axios": "^0.26.1",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cron": "^1.8.2",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "express-jwt": "^6.1.1",
    "express-sanitizer": "^1.0.6",
    "express-session": "^1.17.2",
    "front-matter": "^4.0.2",
    "full-icu": "^1.4.0",
    "hedgedoc-api": "git+https://github.com/betagouv/hedgedoc-api-lib-js.git#v1.0",
    "jsonwebtoken": "^8.2.2",
    "juice": "^8.0.0",
    "knex": "^1.0.5",
    "lodash": "^4.17.21",
    "marked": "^4.0.14",
    "nodemailer": "^6.7.3",
    "ovh": "^2.0.1",
    "pg": "^8.7.3",
    "promise-memoize": "^1.2.1",
    "raw-body": "^2.5.1",
    "template.data.gouv.fr": "^1.3.2",
    "topbar": "^1.0.1",
    "ts-mocha": "^9.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/marked": "^4.0.3",
    "@types/mocha": "^9.1.0",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.18.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "nock": "^13.2.4",
    "nodemon": "^2.0.15",
