{
  "name": "secretariat",
  "version": "1.0.0",
  "description": "Le secrétariat de l’incubateur",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "migrate": "knex migrate:latest",
    "makeMigration": "knex migrate:make",
    "seed": "knex seed:run",
    "rolldown": "knex migrate:down",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint . --fix",
    "test": "ts-mocha --icu-data-dir=./node_modules/full-icu tests/*.ts tests/*.js --exit --require ./tests/env-setup.js --timeout 3000",
    "postinstall": "husky install",
    "pre-commit": "lint-staged",
    "prestart": "./node_modules/.bin/tsc -p tsconfig.json"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/secretariat.git"
  },
