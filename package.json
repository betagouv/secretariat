  "bugs": {
    "url": "https://github.com/betagouv/secretariat/issues"
  },
  "homepage": "https://github.com/betagouv/secretariat#readme",
  "engines": {
    "node": ">=8.3.0"
  },
  "dependencies": {
    "@octokit/request": "^5.4.15",
