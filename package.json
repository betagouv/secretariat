{
  "name": "secretariat",
  "version": "1.0.0",
  "description": "Le secrétariat de l’incubateur",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_ENV=prod node dist/src/index.js",
    "migrate": "knex migrate:latest --esm",
    "makeMigration": "knex migrate:make --esm",
    "seed": "knex seed:run --esm",
    "rolldown": "knex migrate:down --esm",
    "lint": "eslint . --fix",
    "test": "ts-mocha --icu-data-dir=./node_modules/full-icu tests/*.ts tests/*.ts --exit --require ./tests/env-setup.ts --timeout 3000",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "dev": "npm run watch:back && npm run watch:front",
    "watch:back": "ts-node-dev --transpile-only -r tsconfig-paths/register src/index.ts",
    "watch:front": "webpack --config=webpack.config.js --watch",
    "build": "npm run build:front && npm run build:back",
    "build:back": "ttsc -p tsconfig.build.json && cp -R src/public dist/src && cp -R static dist/static && cp -R src/views/templates dist/src/views",
    "build:front": "webpack --config=webpack.config.js"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/secretariat.git"
  },
  "author": "Julien DAUPHANT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/betagouv/secretariat/issues"
  },
  "homepage": "https://github.com/betagouv/secretariat#readme",
  "engines": {
    "node": "v16.13.0",
    "npm": "8.1.0"
  },
  "dependencies": {
    "@octokit/core": "^3.6.0",
    "@octokit/request": "^5.6.3",
    "@octokit/rest": "^18.12.0",
    "@sentry/integrations": "^6.19.7",
    "@sentry/node": "^6.19.7",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cron": "^2.0.0",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.7",
    "esbuild-loader": "^2.18.0",
    "express": "^4.18.1",
    "express-jwt": "^7.4.3",
    "express-sanitizer": "^1.0.6",
    "express-session": "^1.17.2",
    "front-matter": "^4.0.2",
    "full-icu": "^1.4.0",
    "hedgedoc-api": "git+https://github.com/betagouv/hedgedoc-api-lib-js.git#v1.0",
    "jsonwebtoken": "^8.2.2",
    "juice": "^8.0.0",
    "knex": "^2.0.0",
    "lodash": "^4.17.21",
    "marked": "^4.0.15",
    "moment": "^2.29.3",
    "moment-timezone": "^0.5.34",
    "nodemailer": "^6.7.5",
    "ovh": "^2.0.1",
    "path-browserify": "^1.0.1",
    "pg": "^8.7.3",
    "promise-memoize": "^1.2.1",
    "raw-body": "^2.5.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "template.data.gouv.fr": "^1.3.2",
    "topbar": "^1.0.1",
    "ts-mocha": "^9.0.2",
    "tsconfig-paths": "^4.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript-transform-paths": "^3.3.1",
    "uuid": "^8.3.2",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/marked": "^4.0.3",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "nock": "^13.2.4",
    "nodemon": "^2.0.15",
    "pg-connection-string": "^2.5.0",
    "prettier": "^2.6.2",
    "rewire": "^6.0.0",
    "sinon": "^14.0.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.3"
  },
  "prettier": {
    "singleQuote": true
  }
}
