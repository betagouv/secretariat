{
  "name": "secretariat",
  "version": "1.0.0",
  "description": "L'espace membre de lâ€™incubateur",
  "main": "index.ts",
  "scripts": {
    "start": "NODE_ENV=production node dist/src/index.js",
    "migrate": "knex migrate:latest --esm",
    "makeMigration": "knex migrate:make -x ts --esm",
    "seed": "knex seed:run --esm",
    "rolldown": "knex migrate:down --esm",
    "lint": "eslint . --fix",
    "test": "NODE_ENV=test ts-mocha  --paths -p tsconfig.json --icu-data-dir=./node_modules/full-icu src/**/*.spec.ts tests/*.ts tests/*.ts --exit --require ./tests/env-setup.ts --timeout 5000",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "dev": "NODE_ENV=development concurrently \"npm run watch:back\" \"npm run watch:front\"",
    "watch:back": "ts-node-dev --transpile-only -r tsconfig-paths/register src/index.ts",
    "watch:front": "webpack --config=webpack.config.js --watch",
    "build": "npm run build:front && npm run build:back",
    "build:back": "ttsc -p tsconfig.build.json && cp -R src/public dist/src && cp -R static dist/static && cp -R src/views/templates dist/src/views",
    "build:front": "webpack --config=webpack.config.js"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
