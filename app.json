{
  "name": "secretariat",
  "env": {
    "OVH_APP_KEY": {
      "required": true
    },
    "OVH_APP_SECRET": {
      "required": true
    },
    "OVH_CONSUMER_KEY": {
      "required": true
    },
    "SESSION_SECRET": {
      "required": true
    },
    "MAIL_SERVICE": {
      "required": true
    },
    "MAIL_USER": {
      "required": true
    },
    "MAIL_PASS": {
      "required": true
    },
    "SECURE": {
      "required": true
    },
    "HOSTNAME": {
      "required": true
    },
    "SLACK_WEBHOOK_URL": {
      "required": true
    },
    "SECRETARIAT_DOMAIN": {
      "required": true
    },
    "GITHUB_TOKEN": {
      "required": true
    },
    "GITHUB_REPOSITORY": {
      "required": true
    },
    "GITHUB_FORK": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": ["heroku-postgresql"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "npm run migrate"
  }
}
