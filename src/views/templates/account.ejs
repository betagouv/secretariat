                    <% } %>
                    <% if (userInfos.employer) { %>
                        <p>
                            <strong>Employeur : </strong><%= userInfos.employer.replace('admin/', '') %>
                        </p>
                    <% } %>
                    <% if (userInfos.github) { %>
                        <p>
                            <strong>Compte Github :</strong>
                            <% if (userInfos.github) { %>
